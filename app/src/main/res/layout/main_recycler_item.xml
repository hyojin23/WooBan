<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_recycler_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#E0E0E0"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_video_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/windowBackground"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/main_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/main_video_duration_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#CC1C1C1C"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_video_layout"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        >

        <ImageView
            android:id="@+id/main_profile_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/main_video_title_text_view"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/main_video_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/windowBackground"
            app:layout_constraintLeft_toRightOf="@id/main_profile_image_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/main_video_infomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/main_profile_image_view"
            app:layout_constraintTop_toBottomOf="@id/main_video_title_text_view"
            android:layout_marginLeft="10dp"

            />

